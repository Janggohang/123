<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.post.PostFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fillViewport="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-99dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9DAA88"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textViewMyPost"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#437044"
        android:gravity="center_horizontal|center_vertical"
        android:text="내가 쓴 글"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>
        <!-- 제목 -->
        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/title_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/title_label"
            android:layout_marginTop="10dp"
            android:background="#FDFDFD"
            android:hint="제목을 입력해주세요" />

        <!-- 사진 -->
        <TextView
            android:id="@+id/photo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_edit"
            android:text="사진"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_label"
            android:text="사진 추가하기" />

        <!-- 가격 -->
        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_button"
            android:text="가격"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/price_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/price_label"
            android:layout_marginTop="10dp"
            android:hint="가격을 입력해주세요"
            android:background="#FDFDFD"/>

        <!-- 인원수 -->
        <TextView
            android:id="@+id/count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_edit"
            android:text="인원수"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/count_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/count_label"
            android:layout_marginTop="10dp"
            android:hint="인원수를 입력해주세요"
            android:background="#FDFDFD"/>

        <!-- 현위치 -->
        <TextView
            android:id="@+id/location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/count_edit"
            android:text="현위치"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/location_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/location_label"
            android:layout_marginTop="10dp"
            android:hint="현위치를 입력해주세요"
            android:background="#FDFDFD"/>
        <!-- 글 내용 -->
        <TextView
            android:id="@+id/content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_edit"
            android:text="글 내용"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/content_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/content_label"
            android:layout_marginTop="10dp"
            android:hint="내용을 입력해주세요"
            android:background="#FDFDFD"/>

        <!-- 등록 버튼 -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="등록" />


    </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#437044"
        app:itemIconTint="?android:attr/textColorPrimaryInverseNoDisable"
        app:itemTextColor="?android:attr/textColorPrimaryInverseNoDisable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>