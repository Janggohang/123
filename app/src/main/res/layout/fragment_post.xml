<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.post.PostFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fillViewport="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-93dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9DAA88"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="#437044"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/textViewMyPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28sp"
                        android:background="#437044"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="게시글 작성"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/submitBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="등록"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_brightness_7_40"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- 제목 -->
            <TextView
                android:id="@+id/title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/title_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/title_label"
                android:layout_marginTop="10dp"
                android:background="#FDFDFD"
                android:hint="제목을 입력해주세요" />

            <!-- 사진 -->
            <TextView
                android:id="@+id/photo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_edit"
                android:text="사진"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/photo_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/photo_label"
                app:srcCompat="@drawable/photo_img" />

            <!-- 가격 -->
            <TextView
                android:id="@+id/price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo_button"
                android:text="가격"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/price_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/price_label"
                android:layout_marginTop="10dp"
                android:background="#FDFDFD"
                android:hint="가격을 입력해주세요"
                android:inputType="number" />

            <!-- 인원수 -->
            <TextView
                android:id="@+id/count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_edit"
                android:text="인원수"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/count_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/count_label"
                android:layout_marginTop="10dp"
                android:background="#FDFDFD"
                android:hint="인원수를 입력해 주세요"
                android:inputType="number"/>

            <!--인당 가격-->
            <TextView
                android:id="@+id/price_per_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_edit"
                android:text="인당 가격"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_per_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/price_per_Label"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:background="#FDFDFD"/>

            <!-- 현위치 -->
            <TextView
                android:id="@+id/location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/count_edit"
                android:text="현위치"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:background="#FDFDFD"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <android.widget.Button
                    android:id="@+id/locationBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="위치 불러오기"
                    tools:ignore="InvalidId" />

            </LinearLayout>
            <!-- 글 내용 -->
            <TextView
                android:id="@+id/content_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_edit"
                android:text="글 내용"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/content_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_label"
                android:layout_marginTop="10dp"
                android:background="#FDFDFD"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minHeight="100dp"
                android:scrollHorizontally="false"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>