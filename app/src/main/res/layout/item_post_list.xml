<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/post_background"
    >

    <ImageView
        android:id="@+id/item_post_img_list"
        android:scaleType="fitXY"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/no_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_post_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="글 제목"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@+id/item_post_img_list"
        app:layout_constraintTop_toTopOf="@+id/item_post_img_list"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/item_post_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="25dp"
        android:text="11:22"
        app:layout_constraintBottom_toTopOf="@id/item_post_list_numOfParticipants"
        app:layout_constraintStart_toStartOf="@id/item_post_title"
        app:layout_constraintTop_toBottomOf="@id/item_post_title" />

    <TextView
        android:id="@+id/item_post_list_numOfParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="참여 인원: 13/15명"
        app:layout_constraintTop_toBottomOf="@id/item_post_list_time"
        app:layout_constraintStart_toStartOf="@id/item_post_list_time"/>

    <TextView
        android:id="@+id/item_post_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="30000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/item_post_list_numOfParticipants"
        app:layout_constraintStart_toStartOf="@id/item_post_list_numOfParticipants"/>

</androidx.constraintlayout.widget.ConstraintLayout>


